# =====================================================
# PRUEBAS DE API - CATÁLOGOS
# =====================================================
# Usa estos comandos para probar los endpoints
# Puedes usar curl, Postman, Insomnia, o Thunder Client (extensión VS Code)

# =====================================================
# 1. OBTENER TODOS LOS ROLES
# =====================================================
GET http://localhost:3000/api/catalogos/roles

# Con búsqueda
GET http://localhost:3000/api/catalogos/roles?search=Administrador

# Con paginación
GET http://localhost:3000/api/catalogos/roles?page=1&limit=5

# =====================================================
# 2. OBTENER UN ROL POR ID
# =====================================================
GET http://localhost:3000/api/catalogos/roles/1

# =====================================================
# 3. CREAR UN NUEVO ROL
# =====================================================
POST http://localhost:3000/api/catalogos/roles
Content-Type: application/json

{
  "nombre": "Supervisor",
  "descripcion": "Supervisa el funcionamiento del tribunal"
}

# =====================================================
# 4. ACTUALIZAR UN ROL
# =====================================================
PUT http://localhost:3000/api/catalogos/roles/1
Content-Type: application/json

{
  "descripcion": "Administrador del sistema con acceso completo"
}

# =====================================================
# 5. ELIMINAR UN ROL
# =====================================================
DELETE http://localhost:3000/api/catalogos/roles/7

# =====================================================
# 6. OBTENER ESTADÍSTICAS
# =====================================================
GET http://localhost:3000/api/catalogos/roles/stats

